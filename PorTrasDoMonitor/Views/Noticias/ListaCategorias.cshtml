@model PorTrasDoMonitor.ViewModels.CreateNoticiaViewModel

<div class="container">
    <div class="row">
        @foreach (var categoria in Model.ListaCategorias)
        {
            <div class="col-md-4 col-lg-4 col-sm-6 col-xs-6">
               
                <label>
                    @if (Model.IdsCategorias.Contains(categoria.ID))
                    {
                    <input type="checkbox" name="@Html.NameFor(c => c.IdsCategorias)" checked value="@categoria.ID" />
                    }
                    else
                    {
                    <input type="checkbox" name="@Html.NameFor(c=>c.IdsCategorias)" value="@categoria.ID" />
                    }
                    @categoria.TipoCategoria
                </label>


            </div>
        }
    </div>
</div>
