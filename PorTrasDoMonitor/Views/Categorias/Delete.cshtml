@model PorTrasDoMonitor.Models.Categorias

@{
    ViewBag.Title = "Remover Categoria";
}


@Html.ValidationSummary(true, "", new { @class = "text-danger lblNome" })
<h3>Tens a certeza que queres remover isto?</h3>
<div class="bg-dark p-4">
    <dl class="dl-horizontal">
        <dt>
            Categoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoCategoria)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Remover" class="btn btn-danger btn-sm" /> |
    @Html.ActionLink("Voltar à lista", "Index", null, new { @class = "btn btn-sm btn-light" })
</div>
    }
</div>
