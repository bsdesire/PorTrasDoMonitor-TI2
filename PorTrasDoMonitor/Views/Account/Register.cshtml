@model IdentitySample.Models.RegisterViewModel
@{
    ViewBag.Title = "Registar";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class="bg-dark p-3" }))
{
    @Html.AntiForgeryToken()
    <h4>Criar uma conta nova</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger alert alert-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <!--Atributos especificos do utilizador-->
    <div class="form-group">
        @Html.LabelFor(m => m.Utilizador.Nome, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Utilizador.Nome, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Utilizador.DataNascimento, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Utilizador.DataNascimento, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Utilizador.Descricao, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Utilizador.Descricao, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Utilizador.Avatar, new { @class = "col-md-2 control-label" })
        <input type="file"
               class="btn btn-info btn-sm"
               name="avatarUpload"
               
               accept=".jpg" />

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default btn-success" value="Registar" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
