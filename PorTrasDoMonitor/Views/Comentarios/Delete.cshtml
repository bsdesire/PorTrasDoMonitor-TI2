@model PorTrasDoMonitor.Models.Comentarios

@{
    ViewBag.Title = "Delete";
}


@if (Request.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Jornalista") || User.Identity.Name.Equals(Model.Utilizador.Username)))
{
    <h2>Delete</h2>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Comentarios</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Noticia.Titulo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Noticia.Titulo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Utilizador.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Utilizador.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descricao)
            </dd>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Apagar" class="btn btn-default" /> |
                <a href=@Url.Action("Details","Noticias",new { id = Model.NoticiasFK })>Voltar ao Inicio</a>
            </div>
        }

    </div>
}




